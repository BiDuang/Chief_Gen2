<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Chief_Reloaded.App">

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Chief_Reloaded/Icons.axaml" />
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="Microsoft YaHei, WenQuanYi Micro Hei" />
        </Style>
        <Style Selector="Button">
            <Setter Property="FontFamily" Value="Microsoft YaHei, WenQuanYi Micro Hei" />
        </Style>
        <Style Selector="TextBox">
            <Setter Property="FontFamily" Value="Microsoft YaHei, WenQuanYi Micro Hei" />
        </Style>
        <Style Selector="CheckBox">
            <Setter Property="FontFamily" Value="Microsoft YaHei, WenQuanYi Micro Hei" />
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="FontFamily" Value="Microsoft YaHei, WenQuanYi Micro Hei" />
        </Style>
    </Application.Styles>
</Application>